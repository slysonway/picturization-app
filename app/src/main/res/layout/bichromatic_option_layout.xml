<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/title_bichromatic_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_bichromatic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_add_filter"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/title_bichromatic_option"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title_bichromatic_option" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color 1"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="@+id/color_picker1"
        app:layout_constraintStart_toStartOf="@+id/color_picker1"
        app:layout_constraintTop_toBottomOf="@+id/title_bichromatic_option" />

    <View
        android:id="@+id/color_picker1"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_margin="16dp"
        android:background="@drawable/emptyrect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color 2"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="@+id/color_picker2"
        app:layout_constraintStart_toStartOf="@+id/color_picker2"
        app:layout_constraintTop_toBottomOf="@+id/title_bichromatic_option" />

    <View
        android:id="@+id/color_picker2"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_margin="16dp"
        android:background="@drawable/emptyrect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />
</androidx.constraintlayout.widget.ConstraintLayout>
